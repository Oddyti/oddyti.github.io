	width=&#34;2160&#34;
	height=&#34;3840&#34;
	srcset=&#34;https://oddyti.com/post/wuchao/%E9%87%8E%E8%B7%AF1_hu13966800768701042825.jpg 480w, https://oddyti.com/post/wuchao/%E9%87%8E%E8%B7%AF1_hu7925416497583957693.jpg 1024w&#34;
	loading=&#34;lazy&#34;
	
